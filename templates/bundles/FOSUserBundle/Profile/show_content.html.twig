{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <div class="container">
        <div class="user-menu-container square">
            <div class="col-md-12 user-details d-flex-centered d-flex-column">
                {% if user.imageFilename %}
                    <a href="{{ uploaded_asset(user.imagePath) }}" target="_blank">
                        <div class="user-image">
                            <img src="{{ user.imagePath|imagine_filter('squared_thumbnail_medium') }}" alt="profile picture">
                        </div>
                    </a>
                {% else %}
                    <i class="far fa-laugh-beam default-profile-image"></i>
                {% endif %}
                <div class="col-md-10 no-pad d-flex-centered">
                    <div class="user-pad d-flex-centered d-flex-column">
                        <h3>{{ user.firstName }} {{ user.lastName }}</h3>
                        {% if user is same as(app.user) %}
                            <a class="btn btn-labeled btn-info" href="{{ path('fos_user_profile_edit') }}">
                                <span class="btn-label"><i class="fa fa-pen"></i></span>Update
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

