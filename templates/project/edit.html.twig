{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    {{ form_widget(form) }}

    <button type="submit">Modify !</button>
    {{ form_end(form) }}

    <h3>References</h3>
    <ul>
        {% for reference in project.projectReferences %}
            <li>
                {{ reference.originalFilename }}
                <span>
                    <a href="{{ path('project_download_reference', {
                        id: reference.id
                    }) }}"><i class="fas fa-download"></i></a>
                </span>
            </li>
        {% endfor %}
    </ul>
    <form action="{{ path('project_add_reference', {
        slug: project.slug
    }) }}" method="post" enctype="multipart/form-data" class="dropzone js-reference-dropzone">
    </form>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.5.1/min/dropzone.min.css" integrity="sha256-e47xOkXs1JXFbjjpoRr1/LhVcqSzRmGmPqsrUQeVs+g=" crossorigin="anonymous" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.5.1/min/dropzone.min.js" integrity="sha256-cs4thShDfjkqFGk5s2Lxj35sgSRr4MRcyccmi0WKqCM=" crossorigin="anonymous"></script>
    <script src="{{ asset('uploads/js/project_form.js') }}"></script>
{% endblock %}

