{% extends 'content_base.html.twig' %}

{% block content_body %}
    <a href="{{ path('project_new') }}" class="btn btn-primary pull-right">
        Create <span class="fa fa-plus-circle"></span>
    </a>
    <h1>All Projects</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Published?</th>
            <th>Edit</th>
            <th>Remove</th>
        </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.name }}</td>
                <td>{{ project.author.email }}</td>
                <td>
                    <span class="fa fa-{{ project.isPublished ? 'check' : 'times' }}"></span>
                </td>
                <td>
                    <a href="{{ path('project_edit', {
                        slug: project.slug
                    }) }}">
                        <span class="fa fa-pen"></span>
                    </a>
                </td>
                <td>
                    <a href="{{ path('project_delete', {
                        id: project.id
                    }) }}">
                        <span class="fa fa-trash"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

